{
  "name": "three-presenter",
  "version": "0.1.0",
  "description": "Framework-agnostic 3D viewer library built on Three.js",
  "license": "MIT",
  "type": "module",
  "main": "./dist/three-presenter.js",
  "module": "./dist/three-presenter.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/three-presenter.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "build:demo": "npm run build && cp -r dist/* docs/dist/",
    "build:all": "npm run build && npm run docs && cp -r dist/* docs/dist/",
    "dev": "vite",
    "preview": "vite preview",
    "serve": "http-server docs -p 3000",
    "docs": "typedoc"
  },
  "keywords": [
    "three.js",
    "3d-viewer",
    "webgl",
    "annotations",
    "3d-models",
    "glb",
    "ply",
    "obj",
    "nexus"
  ],
  "author": "CNR-ISTI Visual Computing Lab",
  "peerDependencies": {
    "three": "^0.180.0"
  },
  "devDependencies": {
    "@types/three": "^0.180.0",
    "http-server": "^14.1.1",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.2",
    "vite": "^6.0.0"
  }
}
